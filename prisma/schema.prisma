// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

model User {
  id           Int        @id @default(autoincrement())
  name         String
  email        String     @unique
  profileImage String
  blogs        Blog[]
  likes        Likes[]
  responds     Responds[]
  followThings Follow[]
}

model Blog {
  id       Int        @id @default(autoincrement())
  title    String
  content  String
  user     User       @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId   Int
  likes    Likes[]
  responds Responds[]
}

model Likes {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  blog   Blog @relation(fields: [blogId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId Int
  blogId Int
}

model Responds {
  id      Int    @id @default(autoincrement())
  comment String
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  blog    Blog   @relation(fields: [blogId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId  Int
  blogId  Int
}

model Follow {
  follwerid Int    @id @default(autoincrement())
  following User[]
}
